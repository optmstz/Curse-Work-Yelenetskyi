@model IEnumerable<WebApplication1.Models.PassportServices>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice) ₴
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecutionDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-secondary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

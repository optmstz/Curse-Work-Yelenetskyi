@model WebApplication1.Models.Employees

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center d-inline-block">Details</h1>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
    <form asp-action="Edit" class="shadow p-3 mb-5 bg-white rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmployeesId" />

        <div class="row">
            <!-- EmployeeName -->
                <div class="form-group mb-4">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" readonly />
            </div>

            <!-- EmployeeSurname -->
            <div class="form-group mb-4">
                <label asp-for="EmployeeSurname" class="control-label"></label>
                <input asp-for="EmployeeSurname" class="form-control" readonly />
            </div>

        </div>

        <div class="form-group">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
    </div>
</div>